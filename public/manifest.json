{
  "manifest_version": 3,
  "name": "Share with Grace",
  "version": "1.0.0",
  "description": "A Chrome extension that helps you share content with grace and ease",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [{
    "resources": ["index.html", "assets/*"],
    "matches": ["<all_urls>"]
  }]
}
